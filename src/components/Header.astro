---
const {home = false, about = false, contact = false} = Astro.props
---

<header class="header header-home main-grid">
    <div class="header-content">
        <a class="logo-link" href="/">
            <img src="/logo/H&M Marketing.png" alt="" class="logo">
        </a>
        <button aria-label="Open navigation" class="open-nav">&#9776;</button>

        <nav class="nav">
            <button aria-label="Close navigation" class="close-nav">&times;</button>
            <ul class="nav-list">
                <li class="nav-item"><a href="/" class:list={['nav-link', {current: home}]}>home</a></li>
                <li class="nav-item"><a href="/about" class:list={['nav-link', {current: about}]}>about us</a></li>
                <li class="nav-item"><a href="/contact" class:list={['nav-link', {current: contact}]}>contact</a></li>
            </ul>
        </nav>
    </div>
</header>

<script is:inline type="module">
    const closeButton = document.querySelector('.close-nav');
    const openButton = document.querySelector('.open-nav');
    const nav = document.querySelector('.nav');

    closeButton.addEventListener("click", () => {
        nav.classList.remove('navigation-open');
    });

    openButton.addEventListener("click", () => {
        nav.classList.add('navigation-open');
    });
</script>